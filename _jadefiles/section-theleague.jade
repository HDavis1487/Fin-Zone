section.league#league
  .flex.flex--space-around
    .article-wrap
      aside.old-stories.col-1
        h3.area League News
        ul
          {% for post in site.categories.old %}
          li
            h3: a(href="{{ post.url }}") {{ post.title}}
            p Posted: {{post.date | date: "%b %d, %Y"}}<br/> by <em>{{post.author}}</em>
            
          {% endfor %}
          
      article.top-stories.order-first.flex--full
        h3.area Top Stories
        .top-article-wrap
          ul
            {% for post in site.categories.top %}
            li
              h2 {{ post.title }}
              .thumbnail(style="background-image:url(/assets/img/post/thumbnails/{{post.thumbnail}})")
              {{ post.excerpt }}
              p Posted: {{post.date | date: "%b %d, %Y"}}<br/> by <em>{{post.author}}</em>
              a(href="{{ post.url }}") Read More
              
            {% endfor %}
